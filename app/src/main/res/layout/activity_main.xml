<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andrioid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="finalyearproject.cit.be_safe.MainActivity">

    <ImageButton
        android:background="@drawable/ic_launcher"
        android:layout_height="320dp"
        android:layout_width="fill_parent"
        android:id="@+id/imageView"
        android:elevation="@dimen/abc_action_bar_content_inset_material" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/txtv"
        android:layout_marginTop="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:text="Take Test and Be-Safe"/>

    <Button
        android:background="#02a8f4"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/button"
        android:layout_marginTop="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtv"
        android:textColor="#ffffff"
        android:text="Get Started"

        android:shadowColor="#5480ed"
        android:elevation="12dp" />
</RelativeLayout>
